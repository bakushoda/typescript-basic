{
  "compilerOptions": {
    "outDir": "./src/js",
    "rootDir": "./src/ts",
    "target": "ES2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true
  },
  "watchOptions": {
    "watchFile": "fixedPollingInterval",
    "watchDirectory": "fixedPollingInterval",
    "synchronousWatchDirectory": true
  },
  "include": ["src/ts/**/*.ts"],
  "exclude": ["src/js/**/*", "node_modules"]
}
